          <td class="table__body-item">Table body content goes here.</td>
        </tr>
        <tr>
          <td class="table__body-item">Table body content goes here.</td>
          <td class="table__body-item">Table body content goes here.</td>
          <td class="table__body-item">Table body content goes here.</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="content-section__row">
    <h4 class="content-section__label">Sample Code</h4>
<% code("html") do %>
  <!-- Standard Table -->
  <table class="table">

    <!-- Standard Table Header -->
    <thead class="table__header">
      <th class="table__header-item">Table Header</th>
      <th class="table__header-item">Table Header</th>
      <th class="table__header-item">Table Header</th>
    </thead>

    <!-- Standard Table Body -->
    <tbody class="table__body">
      <tr>

        <!-- Standard Table Body Item -->
        <td class="table__body-item">Table body content goes here.</td>
      </tr>
    </tbody>
  </table>

  <!-- Card Based Table -->
  <table class="card-table">

    <!-- Card Table Header -->
    <thead class="card-table__header">
      <tr>
        <th class="card-item card-item--large">Scenario Title</th>
      </tr>
    </thead>


    <!-- Card Table Body -->
    <tbody class="card-table__body">
      <tr class="card card--small">

        <!-- Card Table Item Large -->
        <td class="card-item card-item--large">
          <h4 class="title"></h4>
        </td>

        <!-- Card Table Item Base -->
        <td class="card-item">DirecTV</td>
      </tr>

      <!-- Hack to provide space -->
      <tr class="spacer"></tr>
    </tbody>
  </table>
<% end %><br/>
  </div>
  <div class="content-section__row">
    <h4 class="content-section__label">HTML Guidelines</h4>
    <p>This table gives you a quick overview of the CSS classes that can be applied to create a table.</p>
